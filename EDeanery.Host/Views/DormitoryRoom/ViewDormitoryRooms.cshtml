@using EDeanery.Host.Models
@model List<EDeanery.Host.Models.DormitoryRoomGetModel>

<table class="table table-striped">
    <thead>
    <th>Room name</th>
    <th>Max count in room</th>
    <th>Free spaces</th>
    <th>Students</th>
    </thead>
    <tbody>
    @foreach (DormitoryRoomGetModel dormitoryRoom in ViewBag.DormitoryRooms)
    {
        <tr>
            <td>
                @Html.ActionLink(dormitoryRoom.DormitoryRoomName, "GetDormitoryRoomById", "DormitoryRoom",
                    new {dormitoryRoomId = dormitoryRoom.DormitoryRoomId})</td>
            <td>@dormitoryRoom.MaxCountInRoom</td>
            <td>@dormitoryRoom.FreeSpacesCount</td>
            <td>
                @foreach (var dormitoryRoomStudent in dormitoryRoom.DormitoryRoomStudents)
                {
                    @Html.ActionLink(dormitoryRoomStudent.FullName, "GetStudentById", "Student", new {studentId = dormitoryRoomStudent.StudentId})
                }
            </td>
        </tr>
    }
    </tbody>
</table>

